<%= form_for(@hour) do |f| %>
  <% if @hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hour.errors.count, "error") %> prohibited this hour from being saved:</h2>

      <ul>
      <% @hour.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :total %><br />
    <%= f.number_field :total %>
  </div>
  <div class="field">
    <%= f.label "Job #" %><br />
    <%= f.collection_select(:jobsite_id, @jobs, :id, :jobno) %><br />
    <i>Don't see your jobsite? Maybe it isn't created yet or maybe or it isn't active:</i><br />
    <%= link_to 'New Jobsite', new_jobsite_path, :class => "btn btn-default btn-sm btn-primary" %>

    <%= link_to 'View all jobsites', list_jobsites_path, :class => "btn btn-default btn-sm btn-info" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
